<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlantTipsFragment">


    <Button
        android:id="@+id/btnBacktips"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_margin="30dp"
        android:background="@drawable/baseline_arrow_back_24" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Plant Care Tips"
            android:textColor="#5A5A5A"
            android:textSize="20dp"
            android:textStyle="bold" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:layout_marginTop="100dp"
            android:elevation="2dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:layout_width="360dp"
                        android:layout_height="300dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:cardBackgroundColor="#F7F7F7"
                        app:cardCornerRadius="8dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="300dp"
                                android:layout_height="190dp"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="15dp"
                                android:background="@drawable/plantcareimg" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="210dp"
                                android:text="Learn how to keep your plants healthy and thriving with these essential care tips. From proper watering techniques to understanding lighting needs, discover the keys to successful plant care. "
                                android:textColor="#707070"

                                android:textSize="12dp" />


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>



                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="700dp"
                        android:layout_marginTop="340dp"
                        android:background="@drawable/shapetips">

                        <com.airbnb.lottie.LottieAnimationView
                            android:id="@+id/lottiePlant"
                            android:layout_width="100dp"
                            android:layout_height="90dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="5dp"
                            android:elevation="2dp"
                            app:lottie_autoPlay="true"
                            app:lottie_loop="true"
                            app:lottie_rawRes="@raw/smallplant" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="40dp"
                            android:layout_marginEnd="25dp"
                            android:layout_marginBottom="25dp"
                            android:text="Here's a concise set of plant care tips:"
                            android:textColor="#5C5C5C"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#707070"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="100dp"
                            android:text="1."
                            android:textSize="14dp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/txtlightning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="100dp"
                            android:text="Lightning :"
                            android:textColor="#707070"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="115dp"
                            android:layout_marginTop="100dp"
                            android:textColor="#707070"
                            android:text="Match plants with appropriate light levels to ensure healthy growth."
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt1"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:text="2."
                            android:textColor="#707070"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtwater"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtlightning"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="30dp"
                            android:textColor="#707070"
                            android:text="Watering :"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtp1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtp"
                            android:layout_marginLeft="115dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#707070"
                            android:text="Avoid overwatering by letting soil dry slightly between waterings."
                            android:textSize="14dp" />


                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt2"
                            android:textColor="#707070"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:text="3."
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txthumi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtwater"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="30dp"
                            android:text="Watering :"
                            android:textSize="14dp"
                            android:textColor="#707070"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtp1"
                            android:layout_marginLeft="115dp"
                            android:layout_marginTop="10dp"
                            android:textColor="#707070"
                            android:text="Increase humidity for tropical plants; mist or use a tray of water."
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt3"
                            android:layout_marginLeft="30dp"
                            android:textColor="#707070"
                            android:layout_marginTop="30dp"
                            android:text="4."
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txttemp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txthumi"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="30dp"
                            android:textColor="#707070"
                            android:text="Temperature :"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtp3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtp2"
                            android:layout_marginLeft="140dp"
                            android:layout_marginTop="15dp"
                            android:textColor="#707070"
                            android:text="Maintain consistent indoor temperatures for optimal plant health."
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/txt5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt4"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:textColor="#707070"
                            android:text="5."
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtsoild"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txttemp"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="30dp"
                            android:text="Soil :"
                            android:textColor="#707070"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtp4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtp3"
                            android:layout_marginLeft="80dp"
                            android:textColor="#707070"
                            android:layout_marginTop="15dp"
                            android:text="Maintain consistent indoor temperatures for optimal plant health."
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/txt6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt5"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:text="6."
                            android:textColor="#707070"
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtfer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtsoild"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="30dp"
                            android:text="Fertilizing :"
                            android:textSize="14dp"
                            android:textColor="#707070"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtp5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtp4"
                            android:layout_marginLeft="120dp"
                            android:layout_marginTop="15dp"
                            android:textColor="#707070"
                            android:text="Feed plants during the growing season with diluted fertilizer."
                            android:textSize="13dp" />


                        <TextView
                            android:id="@+id/txt7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txt6"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="30dp"
                            android:textColor="#707070"
                            android:text="7."
                            android:textSize="14dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtprun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtfer"
                            android:layout_marginLeft="45dp"
                            android:layout_marginTop="30dp"
                            android:text="Pruning :"
                            android:textSize="14dp"
                            android:textColor="#707070"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txtp6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/txtp5"
                            android:layout_marginLeft="105dp"
                            android:textColor="#707070"
                            android:layout_marginTop="15dp"
                            android:text="Trim dead leaves and prune to maintain shape and encourage growth."
                            android:textSize="13dp" />


                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>
        </ScrollView>


    </RelativeLayout>


</FrameLayout>