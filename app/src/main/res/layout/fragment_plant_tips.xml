<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlantTipsFragment">


    <Button
        android:id="@+id/btnBackTl"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_margin="30dp"
        android:background="@drawable/baseline_arrow_back_24" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Plant Care Tips"
            android:textColor="#5A5A5A"
            android:textSize="20dp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="360dp"
            android:layout_height="270dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#F7F7F7"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="190dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/plantcareimg"
                    android:layout_marginTop="15dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Learn how to keep your plants healthy and thriving with these essential care tips. From proper watering techniques to understanding lighting needs, discover the keys to successful plant care. "
                    android:textSize="12dp"
                    android:textColor="#000"
                    android:layout_marginLeft="20dp"

                    android:layout_marginTop="200dp"/>




            </RelativeLayout>

        </androidx.cardview.widget.CardView>



    </RelativeLayout>


</FrameLayout>