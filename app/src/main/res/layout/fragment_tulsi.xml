<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".TulsiFragment"
    >


    <Button
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_margin="30dp"
        android:id="@+id/backbtntropical"
        android:background="@drawable/baseline_arrow_back_24" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:elevation="2dp"
            android:src="@drawable/tulsii" />

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="320dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="390dp"
            android:elevation="2dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Tulsi"
                android:textColor="#00600f"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="55dp"
                android:text="Xerovit"
                android:textColor="#00600f"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#000"
                android:textSize="18dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="100dp"
                android:textFontWeight="500"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Holy Basil, also known as tulsi, is a sacred herb in Hindu culture and is widely used in Ayurvedic medicine. It belongs to the basil family and has a strong, aromatic flavor with hints of clove and pepper. Tulsi is revered for its medicinal properties and is believed to promote health and well-being. It is considered an adaptogen, helping the body cope with stress and maintain balance."
                android:textSize="13dp"
                android:textColor="#000"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="140dp"/>








        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</FrameLayout>