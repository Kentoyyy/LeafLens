<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetReminder">

    <Button
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_margin="30dp"
        android:id="@+id/backbtnAlarm"
        android:background="@drawable/baseline_arrow_back_24" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="Water Monitoring Reminder"
        android:textColor="#5A5A5A"
        android:textSize="17dp"
        android:textStyle="bold" />





        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:layout_width="390dp"
                android:layout_height="720dp"
                app:cardBackgroundColor="#FDFDFD"
                app:cardCornerRadius="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <com.airbnb.lottie.LottieAnimationView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:id="@+id/lottiePlant"
                        app:lottie_rawRes="@raw/clock"
                        android:elevation="2dp"/>


                    <TextView
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:layout_marginTop="130dp"
                        android:textAlignment="center"
                        android:text="Set AM Water Schedule"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TimePicker
                        android:layout_gravity="center|top"
                        android:id="@+id/timeam"
                        android:layout_width="match_parent"
                        android:layout_marginTop="150dp"
                        android:layout_height="140dp"
                        android:timePickerMode="spinner" />

                    <Button
                        android:textColor="@color/white"
                        android:background="@drawable/round_corner"
                        android:id="@+id/setwateram"
                        android:layout_width="150dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="520dp"
                        android:layout_height="45dp"
                        android:text="Set AM" />

                    <TextView
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:layout_marginTop="300dp"
                        android:textAlignment="center"
                        android:text="Set AM Water Reminder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                    <TimePicker
                        android:layout_gravity="center|top"
                        android:id="@+id/timepm"
                        android:layout_width="match_parent"
                        android:layout_marginTop="350dp"
                        android:layout_height="140dp"
                        android:timePickerMode="spinner" />

                    <Button
                        android:textColor="@color/white"
                        android:background="@drawable/round_corner"
                        android:id="@+id/setwaterpm"
                        android:layout_width="150dp"
                        android:layout_marginLeft="200dp"
                        android:layout_marginTop="520dp"
                        android:layout_height="45dp"
                        android:text="Set PM" />

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="130dp"
                        android:background="@drawable/clockimage"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="580dp"/>




                </RelativeLayout>
            </androidx.cardview.widget.CardView>






        </RelativeLayout>






</RelativeLayout>