<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BittergourdFragment">
    <Button
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:id="@+id/btnbackTropical"
        android:layout_margin="20dp"
        android:background="@drawable/baseline_arrow_back_24" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:elevation="2dp"
            android:src="@drawable/ampalaya" />

        <androidx.cardview.widget.CardView
            android:layout_width="350dp"
            android:layout_height="320dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="390dp"
            android:elevation="2dp"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:fontFamily="sans-serif-condensed"
                android:text="BItter Groud"
                android:textColor="#00600f"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="55dp"
                android:text="Xerovit"
                android:textColor="#00600f"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textColor="#000"
                android:textSize="18dp"
                android:fontFamily="sans-serif-condensed"
                android:layout_marginTop="100dp"
                android:textFontWeight="500"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bitter gourd, also known as ampalaya, is a green,"
                android:textSize="13dp"
                android:textColor="#000"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="140dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cucumber-shaped vegetable with a distinct bitter taste"
                android:textSize="14dp"
                android:textColor="#000"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="155dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="It belongs to the gourd family and is commonly used in various cuisines"
                android:textSize="13dp"
                android:textColor="#000"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="190dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy to grow and commonly found in skincare products."
                android:textSize="14dp"
                android:textColor="#000"
                android:layout_marginLeft="20dp"

                android:layout_marginTop="220dp"/>






        </androidx.cardview.widget.CardView>


    </RelativeLayout>


</FrameLayout>