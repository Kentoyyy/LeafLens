<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fcfcfc"
    tools:context=".PlantsFragment">

   <Button
       android:layout_width="35dp"
       android:layout_height="30dp"
       android:layout_margin="30dp"
       android:background="@drawable/baseline_arrow_back_24"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="30dp"
          android:text="Plants"
          android:textColor="#b2c18e"
          android:textSize="20dp"
          android:textStyle="bold" />

      <androidx.cardview.widget.CardView
          android:layout_width="150dp"
          android:layout_height="170dp"
          android:layout_marginLeft="30dp"
          android:layout_marginTop="150dp"
          android:backgroundTint="#e8f6ee"
          app:cardCornerRadius="7dp">

         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent">

            <ImageView
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:id="@+id/btnAloevera"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:src="@drawable/aloevera" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="25dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Aloe Vera"
                android:textColor="#8B9F5B"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lorem ipsum dolor si"
               android:textSize="12dp"
               android:layout_alignParentBottom="true"
               android:layout_marginLeft="20dp"
               android:layout_marginBottom="5dp"
                android:fontFamily="sans-serif-condensed"
                android:textColor="#8B9F5B"/>


         </RelativeLayout>


      </androidx.cardview.widget.CardView>


   </RelativeLayout>


</FrameLayout>